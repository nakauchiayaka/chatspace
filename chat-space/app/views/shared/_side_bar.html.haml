.chat-side
  .chat-side__user
    .chat-side__user--content
      %p.chat-side__user--content--name
        = current_user.name
      .chat-side__user--content--edit
        =link_to new_group_path do
          %i.fas.fa-edit.icon-color
        =link_to edit_user_path(current_user) do
          %i.fas.fa-cogs.icon-color

  .chat-side__group
    -current_user.groups.each do |group|
      = link_to group_chats_path(group) do
        .chat-side__group--name
          = group.name
        .chat-side__group--message
          = group.show_last_chat


